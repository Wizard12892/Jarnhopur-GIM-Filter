enum: ["Item 1", "Item 2", "Item 3"]
*/
#define VAR_MONSTER_ENUMLIST_FILTER_RUNESANDAMMUNITION []
CONST_MONSTER_RULE (name:VAR_MONSTER_ENUMLIST_FILTER_RUNESANDAMMUNITION) {
  hidden = true;
